# AskAI + KVS Environment Variables
# Copy to .env and fill in your values

# ============================================================================
# KVS (Key-Value Storage) Configuration
# ============================================================================

# DynamoDB table name for KVS Lambda
TABLE_NAME=BTL-KVS

# KVS Lambda endpoint URL (for client SDK)
KVS_ENDPOINT=https://your-kvs-endpoint.amazonaws.com

# ============================================================================
# AskAI Configuration
# ============================================================================

# ==============================================================================
# OPENAI CONFIGURATION (REQUIRED)
# ==============================================================================

# Get your OpenAI API key from: https://platform.openai.com/api-keys
# CRITICAL: This is required for AI narration and tribute decisions
OPENAI_API_KEY=sk-your-openai-api-key-here

# Default OpenAI model (gpt-5-nano is fast and cheap, gpt-5 is higher quality)
DEFAULT_MODEL=gpt-5-nano

# ==============================================================================
# API SECURITY (REQUIRED)
# ==============================================================================

# Generate with: openssl rand -base64 32 OR node -e "console.log(require('crypto').randomBytes(32).toString('base64'))"
# This MUST be 32+ characters
API_HMAC_SECRET=0WKlX0UQZsadoFMZ2zGG4zVvruz/IvQ1JgRdJVcx18w=
# Or use Secrets Manager
# API_HMAC_SECRET_ARN=arn:aws:secretsmanager:us-east-1:123456789:secret:api-hmac-secret


# AskAI Lambda endpoint URL (for client SDK)
ASKAI_ENDPOINT=https://your-askai-endpoint.amazonaws.com

# ============================================================================
# CORS Configuration
# ============================================================================

# Allowed origins (comma-separated)
# Use * for development only, specify origins in production
ALLOWED_ORIGINS=http://localhost:5173,https://btl.run


# ============================================================================
# AWS Configuration
# ============================================================================

AWS_REGION=us-east-1
# AWS_ACCOUNT_ID=123456789012

# ============================================================================
# Development Flags
# ============================================================================

# Allow mock services in development (set to true for local dev)
ALLOW_MOCK_SERVICES=true

# Enable debug logging
# DEBUG=true

# Node environment
NODE_ENV=development
