# btl.run - Root Environment Variables
# Copy this file to .env for local backend/Lambda development

# ============================================================================
# SERVICE ENDPOINTS (deployed or local mock)
# ============================================================================

# KVS Lambda endpoint (deployed function URL or local mock)
# Deployed: Get from CloudFormation outputs after: .\scripts\deploy.ps1
# Local: http://localhost:9002 (run: npx tsx AskAi_KVS/mocks/kvs-server.ts)
KVS_ENDPOINT=http://localhost:9002

# AskAI Lambda endpoint (deployed function URL or local mock)
# Deployed: Get from CloudFormation outputs
# Local: http://localhost:9001 (run: npx tsx AskAi_KVS/mocks/askai-server.ts)
ASKAI_ENDPOINT=http://localhost:9001

# ============================================================================
# AWS CONFIGURATION
# ============================================================================

AWS_REGION=us-east-1

# DynamoDB table name (created by SAM deployment)
TABLE_NAME=btl-run-kvs-dev

# ============================================================================
# SECRETS (for Lambda deployments only)
# ============================================================================

# OpenAI API key - ONLY for local Lambda testing
# In deployed environments, use Secrets Manager ARN in SAM templates
# OPENAI_API_KEY=sk-your-key-for-local-testing-only

# OpenAI Secret ARN (used in SAM templates, not needed locally)
# OPENAI_API_KEY_SECRET_ARN=arn:aws:secretsmanager:us-east-1:ACCOUNT:secret:btl-run/ENV/openai-api-key

# ============================================================================
# SERVICE CONFIGURATION
# ============================================================================

# Default OpenAI model
DEFAULT_MODEL=gpt-5-nano

# CORS allowed origins (comma-separated)
ALLOWED_ORIGINS=http://localhost:5173,https://btl.run

# ============================================================================
# DEVELOPMENT FLAGS
# ============================================================================

# Node environment
NODE_ENV=development

# Enable debug logging
DEBUG=true

# ============================================================================
# NOTES
# ============================================================================

# Frontend configuration is in frontend/.env.local (see frontend/.env.example)
# This root .env is for backend services and Lambda local testing
# For deployment configuration, edit infrastructure/parameters/*.json
